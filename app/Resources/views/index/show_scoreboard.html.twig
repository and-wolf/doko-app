{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scoreboard</h1>

    <table border="1" cellspacing="0" cellpadding="5">
        <thead>
        <tr>
            <th>Round #</th>
            {% for player in players %}
                <th><a href="{{ path('app_doko_getplayerstats', {playerId: player.id}) }}">{{ player.name }}</a></th>
            {% endfor %}
            <th>Points</th>
        </tr>
        </thead>
        <tbody>
        {% for round in rounds %}
            <tr>
                <td>{{ loop.index }}) {{ round.creationDate | date("d.m.Y -- H:i") }} Uhr</td>
                {% for player in players %}
                    {% set found = false %}
                    {% for participant in round.participants %}
                        {% if player.id == participant.player.id %}
                            <td>{{ participant.points }}</td>
                            {% set found = true %}
                        {% endif %}
                    {% endfor %}
                    {% if not found %}
                        <td></td>
                    {% endif %}
                {% endfor %}
                <td>
                    {{ round.points }}
                    {% if round.bock %}
                        <strong>B</strong> {{ round.points * 2 }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Total</th>
            {% for player in players %}
                <th>{{ player.points }}</th>
            {% endfor %}
            <th></th>
        </tr>
        </tfoot>
    </table>
    <br>
    <a href="{{ path('app_doko_enterpoints') }}">Enter points</a>
    <br>
    <a href="{{ path('app_doko_index') }}">Back to homepage</a>
{% endblock %}
